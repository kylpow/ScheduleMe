    <Grid>
        
        <Image x:Name="calendarPic" 
               Source="/Resources/calendar.png" 
               Opacity=".5"
               Stretch="Uniform"
                HorizontalAlignment="Right"/>

        <Label 
            Margin="25"
            FontSize="20"
            Content="Please enter your information to create a new account"/>

        <StackPanel Margin="10,20,0,0">
        <TextBox x:Name="txtEstablishmentName"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,75,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="Establishment Name" />

        <TextBox x:Name="txtFirstName"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,20,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="First Name" />

        <TextBox x:Name="txtLastName"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,20,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="Last Name" />

        <TextBox x:Name="txtUserName"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,20,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="User Name" />

        <TextBox x:Name="txtEmail"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,20,0,0" 
                 TextWrapping="NoWrap"
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="Email Address" />

        <TextBox x:Name="txtPhoneNumber"
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="100,20,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="200"
                 Controls:TextBoxHelper.Watermark="Phone Number" />
        </StackPanel>
    </Grid>

</Controls:MetroWindow>
